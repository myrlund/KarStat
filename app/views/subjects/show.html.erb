
<h1><%= @code %></h1>

<h2>Grades</h2>
<dl>
  <% @stats[:grades].each do |key, value| %>
    <dt><%= key.upcase %></dt>
    <dd><%= value %></dd>
  <% end %>
</dl>

<h2>Meta</h2>
<dl>
  <% @stats[:meta].each do |key, value| %>
    <dt><%= t(key) %></dt>
    <dd>
      <dl>
        <% value.each do |key, n| %>
          <dt><%= t(key) %></dt>
          <dd><%= n %></dd>
        <% end %>
      </dl>
    </dd>
  <% end %>
</dl>

<p>See <%= link_to "JSON", grade_path(@code, :format => :json) %> or <%= link_to "XML", grade_path(@code, :format => :xml) %> versions as well.</p>
